{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base",
        "airbnb-typescript/base",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module",
        "project": ["tsconfig.json"]
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "rules": {
        "no-nested-ternary": "off",
        "no-plusplus": "off",
        "no-restricted-exports": "off",
        "no-param-reassign": ["error", { "props": false }],
        "@typescript-eslint/naming-convention": [
            "error",
            {
              "selector": "default",
              "format": [
                "camelCase",
                "UPPER_CASE",
                "PascalCase"
              ]
            }
          ]
    }
}
